<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Corners: rounded at the bottom only -->
    <corners
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"/>
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />

    <!-- Only bottom border with fade effect -->

    <!-- Create the bottom border with a fading gradient -->
    <gradient
        android:startColor="@android:color/transparent"
        android:endColor="#60B0B0B0"
        android:angle="270" /> <!-- Horizontal gradient for the fading effect -->
</shape>
