<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_border"
        android:elevation="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/backbutton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_left_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/generalSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_user_icon"
                app:shapeAppearance="@style/RoundedImageShape" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="28sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:background="@drawable/footer_border"
            android:orientation="vertical">


            <TextView
                android:background="@drawable/clickable_item_background"
                android:id="@+id/menuItemUserInfo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:drawableStart="@drawable/ic_user_icon"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:text="Info"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/menuItemUserAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/clickable_item_background"
                android:clickable="true"
                android:drawableStart="@drawable/ic_location_icon"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:text="Address"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/menuItemUserChangePassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/clickable_item_background"
                android:clickable="true"
                android:drawableStart="@drawable/ic_key_icon"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:text="Change password"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/menuItemUserOrders"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/clickable_item_background"
                android:clickable="true"
                android:drawableStart="@drawable/ic_truck_icon"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:text="Orders"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/menuItemUserVouchers"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/clickable_item_background"
                android:clickable="true"
                android:drawableStart="@drawable/ic_money_icon"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:text="Vouchers"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/signOutButton"
            android:clickable="true"
            android:focusable="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/clickable_textview_button"
            android:text="Sign out"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>