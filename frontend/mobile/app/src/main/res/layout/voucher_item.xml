<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/voucher_background"
    android:layout_marginVertical="8dp"
    android:orientation="horizontal">


        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Highlighted code text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODE"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"/> <!-- Bright orange color -->

            <!-- Discount text with a slightly lighter color -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50% off "
                android:textSize="18sp"
                android:textColor="@color/white"/> <!-- Dark green color -->

            <!-- Expiration date text with a subdued color -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_clock_icon" />

                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1-1-2025" /> <!-- Gray color for subtle effect -->
            </LinearLayout>

        </LinearLayout>
</LinearLayout>
